# PG CERBOS Environment Configuration
# Copy this file to .env and modify as needed

# PostgreSQL Configuration
PG_SUPERUSER=postgres
PG_SUPERPASS=postgres

# MinIO Configuration
MINIO_USER=minio
MINIO_PASS=minio123

# Application Configuration
SECRET_KEY=your-secret-key-change-in-production

# Natural language to Cypher and general LLM
# Set OPENAI_API_KEY to use OpenAI; otherwise rule-based only for Cypher
# OPENAI_API_KEY=sk-...
# Default for most LLM calls (mini model)
# OPENAI_MODEL=gpt-4o-mini
# Model used for Cypher generation only (e.g. 5.2 / stronger model)
# OPENAI_MODEL_CYPHER=gpt-4.2
# OPENAI_BASE_URL=   # optional, e.g. Azure endpoint

# Optional: Override default ports (uncomment if needed)
# POSTGRES_PORT=5434
# TRINO_COORDINATOR_PORT=8080
# POLICY_REGISTRY_PORT=8082
# POLICY_UI_PORT=8083
# CERBOS_PORT=3593
# MINIO_PORT=9000
# MINIO_CONSOLE_PORT=9001
# NESSIE_PORT=19120 