{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "title": "Resource Schema",
  "description": "Schema for resources (postgres, iceberg) in UES MVP",
  "properties": {
    "kind": {
      "type": "string",
      "enum": ["postgres", "iceberg", "field"],
      "description": "Type of resource"
    },
    "catalog": {
      "type": "string",
      "description": "Catalog name (e.g., 'postgres', 'iceberg')"
    },
    "schema": {
      "type": "string",
      "description": "Schema name (e.g., 'public', 'demo')"
    },
    "table": {
      "type": "string",
      "description": "Table name"
    },
    "field": {
      "type": "string",
      "description": "Field/column name (for field-level permissions)"
    },
    "query": {
      "type": "string",
      "description": "SQL query string"
    },
    "method": {
      "type": "string",
      "enum": ["GET", "POST", "PUT", "DELETE"],
      "description": "HTTP method"
    },
    "path": {
      "type": "string",
      "description": "HTTP request path"
    },
    "body": {
      "type": "string",
      "description": "HTTP request body (SQL query)"
    }
  },
  "required": ["kind"]
}
