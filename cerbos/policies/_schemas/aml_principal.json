{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "title": "AML Principal Schema",
  "description": "Schema for AML user principals in AML PoC",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique user identifier"
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "User email address"
    },
    "roles": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "admin",
          "aml_analyst",
          "aml_analyst_junior",
          "aml_analyst_senior",
          "aml_manager",
          "aml_manager_full",
          "auditor"
        ]
      },
      "description": "List of AML roles assigned to the user (includes admin for system-wide access)"
    },
    "team": {
      "type": "string",
      "description": "User's team assignment (e.g., 'Team A', 'Team B')"
    },
    "is_active": {
      "type": "boolean",
      "description": "Whether the user account is active"
    }
  },
  "required": ["id", "roles"]
}
